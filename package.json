{
  "name": "style.css",
  "description": "Classless stylesheet for markdown documents.",
  "version": "1.0.0-alpha-1",
  "author": "Nate Goldman <ungoldman@gmail.com>",
  "bugs": {
    "url": "https://github.com/ungoldman/style.css/issues"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.1",
    "cssnano-cli": "^1.0.4",
    "gh-pages": "^0.11.0",
    "gh-release": "^2.1.0",
    "live-server": "^1.1.0",
    "node-sass": "^3.9.3",
    "npm-run-all": "^3.1.0",
    "postcss-cli": "^2.6.0",
    "sitedown": "^2.2.0",
    "stylelint": "^7.2.0",
    "stylelint-config-standard": "^13.0.0"
  },
  "files": [
    "style.css",
    "style.min.css",
    "src/scss"
  ],
  "homepage": "https://github.com/ungoldman/style.css",
  "keywords": [
    "css",
    "markdown",
    "sass",
    "style"
  ],
  "license": "ISC",
  "main": "style.css",
  "repository": {
    "type": "git",
    "url": "git@github.com:ungoldman/style.css.git"
  },
  "scripts": {
    "dirty": "[[ $(git status --porcelain) != \"\" ]] && echo \"dirty branch\" && exit 1",
    "generate": "run-s generate:**",
    "generate:css": "node-sass src/scss/ -o ./ --output-style=expanded",
    "generate:css:prefix": "postcss -u autoprefixer -r style.css",
    "generate:min": "cssnano < style.css > style.min.css",
    "gh-pages": "run-s site:* && gh-pages -d site",
    "prerelease": "run-s generate:* test dirty",
    "pretest": "npm run generate:css",
    "release": "gh-release && npm publish",
    "serve:site": "live-server site --port=8000",
    "serve:watch": "run-p watch:*",
    "site:clean": "rm -rf site",
    "site:css": "node-sass src/scss/ -o site/",
    "site:html": "sitedown . -b site/ -l src/site/layout.html --pretty=false",
    "site:min": "cssnano < site/style.css > site/style.min.css",
    "start": "npm-run-all site:* --parallel serve:*",
    "test": "stylelint \"style.css\"",
    "watch:html": "npm run site:html -- -w",
    "watch:scss": "npm run site:css -- -w"
  },
  "style": "style.css"
}
