{
  "name": "mine.css",
  "description": "Classless stylesheet for markdown documents evolved from style.css",
  "version": "2.0.0",
  "author": "Nate Goldman <ungoldman@gmail.com>",
  "contributors": [
    "Bret Comnes <bcomnes@gmail.com> (https://bret.io)"
  ],
  "bugs": {
    "url": "https://github.com/bcomnes/mine.css/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.6.0",
    "budo": "^11.6.2",
    "cpx2": "^2.0.0",
    "gh-pages": "^2.0.1",
    "gh-release": "^3.5.0",
    "highlight.js": "^9.15.8",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.17",
    "postcss-browser-reporter": "^0.6.0",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "postcss-nesting": "^7.0.0",
    "postcss-reporter": "^6.0.1",
    "postcss-url": "^8.0.0",
    "rimraf": "^3.0.0",
    "sitedown": "^4.0.0",
    "stylelint": "^13.0.0",
    "stylelint-config-standard": "^19.0.0",
    "top-bar.css": "^2.0.0"
  },
  "homepage": "https://github.com/bcomnes/mine.css",
  "keywords": [
    "css",
    "markdown",
    "postcss",
    "style"
  ],
  "license": "MIT",
  "main": "dist/style.css",
  "style": "dist/style.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/bcomnes/mine.css.git"
  },
  "scripts": {
    "pretest": "run-s build",
    "test": "run-s test:*",
    "test:stylelint": "stylelint 'src/**.css'",
    "build": "run-s clean build:*",
    "build:style.css": "postcss src/index.css -o dist/style.css",
    "build:layout.css": "postcss src/layout.css -o dist/layout.css",
    "build:site.css": "postcss site/index.css -o public/site.css",
    "build:md": "sitedown . -b public/ -l site/layout.html --pretty=false",
    "watch": "npm run clean && run-p watch:*",
    "watch:site.css": "run-s 'build:site.css -- --watch'",
    "watch:md": "npm run build:md -- -w",
    "watch:js": "budo --dir public --live --open",
    "clean": "rimraf 'dist/*' 'public/*' && mkdirp dist public",
    "start": "npm run watch"
  }
}
