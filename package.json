{
  "name": "style.css",
  "description": "Style without class",
  "version": "0.1.16",
  "author": "Nate Goldman <ungoldman@gmail.com>",
  "bugs": {
    "url": "https://github.com/ungoldman/style.css/issues"
  },
  "devDependencies": {
    "cssnano-cli": "^1.0.4",
    "gh-release": "^2.1.0",
    "live-server": "^1.1.0",
    "node-sass": "^3.9.3",
    "npm-run-all": "^3.1.0",
    "parallelshell": "^2.0.0",
    "sitedown": "^2.1.2",
    "stylelint": "^7.2.0",
    "stylelint-config-standard": "^13.0.0"
  },
  "files": [
    "style.css",
    "style.min.css",
    "src/scss"
  ],
  "homepage": "https://github.com/ungoldman/style.css",
  "keywords": [
    "css",
    "markdown",
    "sass",
    "style"
  ],
  "license": "ISC",
  "main": "style.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/ungoldman/style.css.git"
  },
  "scripts": {
    "prerelease": "npm-run-all release:generate test release:minify",
    "prestart": "rm -rf site/* && npm-run-all --parallel site:*",
    "release": "gh-release",
    "release:generate": "node-sass src/scss/ -o ./ --output-style=expanded",
    "release:minify": "cssnano < style.css > style.min.css",
    "serve:site": "live-server site --port=8000",
    "serve:watch": "npm run site:sass -- -w",
    "site:html": "sitedown . -b site/ -l src/site/layout.html --pretty=false",
    "site:sass": "node-sass src/scss/ -o site/",
    "start": "npm-run-all --parallel serve:*",
    "test": "stylelint \"style.css\""
  },
  "style": "style.css"
}
