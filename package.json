{
  "name": "style.css",
  "description": "Style without class",
  "version": "0.1.16",
  "author": "Nate Goldman <ungoldman@gmail.com>",
  "bugs": {
    "url": "https://github.com/ungoldman/style.css/issues"
  },
  "devDependencies": {
    "node-sass": "^3.9.3",
    "node-static": "^0.7.8",
    "npm-run-all": "^3.1.0",
    "parallelshell": "^2.0.0",
    "sitedown": "^2.1.0",
    "standard": "^8.0.0"
  },
  "files": [
    "style.css",
    "style.min.css",
    "source/style.scss"
  ],
  "homepage": "https://github.com/ungoldman/style.css",
  "keywords": [
    "css",
    "markdown",
    "sass",
    "style"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/ungoldman/style.css.git"
  },
  "scripts": {
    "minify": "node minify.js",
    "sass": "node-sass src/ -o ./",
    "watch:sass": "node-sass src/ -o site/ -w",
    "build:site": "rm -rf site/* && sitedown . -b site/ -l layout.html --pretty=false && cp style* site",
    "serve": "static site -p 8000",
    "prestart": "npm run sass && npm run build:site",
    "start": "npm-run-all --parallel serve watch:sass",
    "test": "standard"
  },
  "style": "style.css"
}
