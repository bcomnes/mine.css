{
  "name": "style.css",
  "description": "Style without class",
  "version": "0.1.16",
  "author": "Nate Goldman <ungoldman@gmail.com>",
  "bugs": {
    "url": "https://github.com/ungoldman/style.css/issues"
  },
  "devDependencies": {
    "cssnano-cli": "^1.0.4",
    "live-server": "^1.1.0",
    "node-sass": "^3.9.3",
    "npm-run-all": "^3.1.0",
    "parallelshell": "^2.0.0",
    "sitedown": "^2.1.0",
    "standard": "^8.0.0"
  },
  "files": [
    "style.css",
    "style.min.css",
    "source/style.scss"
  ],
  "homepage": "https://github.com/ungoldman/style.css",
  "keywords": [
    "css",
    "markdown",
    "sass",
    "style"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/ungoldman/style.css.git"
  },
  "scripts": {
    "prestart": "rm -rf site/* && npm-run-all --parallel site:*",
    "release": "npm-run-all release:*",
    "release:generate": "node-sass src/ -o ./",
    "release:minify": "cssnano < style.css > style.min.css",
    "site:html": "sitedown . -b site/ -l layout.html --pretty=false",
    "site:sass": "node-sass src/ -o site/",
    "serve:site": "live-server site --port=8000",
    "serve:watch": "npm run site:sass -- -w",
    "start": "npm-run-all --parallel serve:*",
    "test": "standard"
  },
  "style": "style.css"
}
